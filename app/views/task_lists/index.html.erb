<%# encoding: UTF-8 %>
<p id="notice"><%= notice %></p>

<h1>Task Lists</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskList</title>
    <%= stylesheet_link_tag "task_lists", :media => "all" %>
</head>

<body>

      <div class="row">
            <%# メイン部分  %>
            <div class="col-9" >

                <% @task_headers.each do |task_header| %>
                    <%# タスク一覧部分 %>
                    <div class="tasks">
                    
                        <ul style="list-style:none">
                            <li class="task_header_li" ><span class="task_header"><%= task_header.title %></span> 
                                <div class="text-right ">
                                    <span>予定 <%= task_header.plan_start_date %> - <%= task_header.plan_end_date %>( 2h 5m )</span> <span>&</span><span> 実績 未確定 </span>
                                </div>
                            </li>
                        
                            <ul style="list-style:none" class="task_detail">
                                <% task_header.task_plan_lists.each do |task_list| %>
                                    <li class="task_contents"><%= task_list.title %></li>
                                <% end %>
                            </ul>
                            
                        </ul>
                                
                    </div>
                <% end %>        


            </div>
     
   

            
            <%# 右サイドバー部分 %>
            <div class="col-3 right">
                <ul id="right-sidebar" class="nav-sidebar" style="list-style: none; padding-left: 0;">
                
                        <li class="mt-1">
                            <div id="calender" >
                                <a href="#">ここにカレンダー。</a>

                            </div>
                        </li>
                   
               
                        <li class="mt-5">
                            <div id="time_clock">
                                <a href="#">ここに現在時刻</a>
                                https://www.google.co.jp/     </div>
                        </li>
                    
                    
                        <li class="mt-2">
                            <button type="button" class="btn btn-primary">タスク消化スタート！</button>
                        </li>


                 
                </ul>
                
            </div>
        </div>
    
</body>
</html>
